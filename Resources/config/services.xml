<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rules.engine.class">CodeMeme\RulesBundle\RulesEngine</parameter>
        <parameter key="rules.rule.class">CodeMeme\RulesBundle\RulesEngine\Rule</parameter>
    </parameters>

    <services>
        <service id="rules.engine" class="%rules.engine.class%" />
        <service id="rules" alias="rules.engine" />
    </services>
</container>
